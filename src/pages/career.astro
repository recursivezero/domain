---
import BaseLayout from "@/layouts/BaseLayout";
---

<BaseLayout meta={{ title: "Careers at RecursiveZero" }}>
  <main class="flex flex-col mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="py-12 text-center">
      <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl">Join Our Team</h1>
      <p class="mt-4 text-lg text-gray-400">Build the future with us</p>
    </div>

    <div class="grid gap-8 pb-12">
      <!-- Current Openings -->
      <section class="rounded-lg bg-gray-800/50 p-6">
        <h2 class="mb-6 text-2xl font-bold text-white">Current Openings</h2>
        
        <div class="space-y-6">
          <!--Job Listing 1 -->
          <div class="rounded-md border border-gray-700 p-6">
            <h3 class="text-xl font-semibold text-white">Senior Frontend Developer</h3>
            <p class="mt-2 text-gray-400">We're looking for an experienced frontend developer to join our team.</p>
            <div class="mt-4 flex flex-wrap gap-2">
              <span class="rounded-full bg-blue-900/50 px-3 py-1 text-sm text-blue-200">Remote</span>
              <span class="rounded-full bg-green-900/50 px-3 py-1 text-sm text-green-200">Full-time</span>
            </div>
          </div>

          <!--Job Listing 2 -->
          <div class="rounded-md border border-gray-700 p-6">
            <h3 class="text-xl font-semibold text-white">Backend Engineer</h3>
            <p class="mt-2 text-gray-400">Join us in building scalable backend solutions.</p>
            <div class="mt-4 flex flex-wrap gap-2">
              <span class="rounded-full bg-blue-900/50 px-3 py-1 text-sm text-blue-200">Hybrid</span>
              <span class="rounded-full bg-green-900/50 px-3 py-1 text-sm text-green-200">Full-time</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Why Join Us -->
      <section class="mt-12 rounded-lg bg-gray-800/50 p-6">
        <h2 class="mb-6 text-2xl font-bold text-white">Why Join RecursiveZero?</h2>
        <div class="grid gap-6 md:grid-cols-3">
          <div class="rounded-lg bg-gray-700/50 p-4">
            <h3 class="text-lg font-semibold text-white">Remote First</h3>
            <p class="mt-2 text-gray-400">Work from anywhere in the world</p>
          </div>
          <div class="rounded-lg bg-gray-700/50 p-4">
            <h3 class="text-lg font-semibold text-white">Learning & Growth</h3>
            <p class="mt-2 text-gray-400">Continuous learning opportunities</p>
          </div>
          <div class="rounded-lg bg-gray-700/50 p-4">
            <h3 class="text-lg font-semibold text-white">Great Benefits</h3>
            <p class="mt-2 text-gray-400">Competitive salary and benefits package</p>
          </div>
        </div>
      </section>

      <!-- Application Process -->
      <section class="mt-12 rounded-lg bg-gray-800/50 p-6">
        <h2 class="mb-6 text-2xl font-bold text-white">How to Apply</h2>
        <p class="text-gray-400">
          Send your resume and a brief cover letter to 
          <a href="mailto:careers@recursivezero.com" class="text-blue-400 hover:underline">
            careers@recursivezero.com
          </a>
        </p>
      </section>
    </div>
  </main>
</BaseLayout>
